package diuf1;

import java.awt.EventQueue;

import javax.swing.JButton;
import javax.swing.JFrame;

public class LoginScreen {

    private JFrame frame;

    /**
     * Create the application.
     */
    public LoginScreen() {
        initialize();
    }

    /**
     * Initialize the contents of the frame.
     */
    private void initialize() {
        frame = new JFrame();
        frame.setBounds(100, 100, 450, 600); // Ajusta el tamaño de la ventana
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.getContentPane().setLayout(null);

        // Botón "Registrarse"
        JButton registerButton = new JButton("Registrarse");
        registerButton.setBounds(175, 500, 100, 30); // Ajusta la posición y el tamaño del botón
        registerButton.addActionListener(e -> {
        RegisterScreen1 registerScreen1 = new RegisterScreen1(); // Crear instancia de RegisterScreen1
        registerScreen1.setVisible(true); // Mostrar RegisterScreen1
            frame.dispose(); // Cierra la pantalla actual
        });
        frame.getContentPane().add(registerButton);
    }

    /**
     * Método para mostrar la ventana.
     */
    public void setVisible(boolean visible) {
        frame.setVisible(visible);
    }
}
